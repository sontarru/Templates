{
  "$schema": "http://json.schemastore.org/template",
  "author": "sontar.ru",
  "classifications": [ "Sontar" ],
  "identity": "Sontar.Sln",
  "name": "Solution",
  "shortName": "Sontar.Sln",
  "tags": { "language": "C#", "type": "project" },
  "sourceName": "Sontar.Sln",
  "symbols": {
    "Update": {
      "description": "Updates the solution template (overwrites only `Directory.Build.props` files).",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateSolutionProps": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `Directory.Solution.props` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdatePackagesProps": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `Directory.Packages.props` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateEditorconfig": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.editorconfig` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGitignore": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.gitignore` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGlobalJson": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `global.json` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateNugetConfig": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `nuget.config` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGitHubWorkflows": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.github/workflows/**/*` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "GitHubRepoOwner": {
      "description": "The owner of the GitHub repository.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "string",
      "defaultValue": "sontarru",
      "replaces": "sontarru"
    },
    "GitHubRepoName": {
      "description": "The name of the GitHub repository.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "string",
      "defaultValue": "",
      "replaces": "{GitHubRepoName}"
    },
    "Company": {
      "description": "The company.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "string",
      "defaultValue": "sontar.ru",
      "replaces": "sontar.ru"
    },
    "GitHubActionsWorkflow": {
      "description": "Add a GitHub actions CI workflow.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "choice",
      "defaultValue": "none",
      "choices": [
        {
          "choice": "none",
          "description": "No CI."
        },
        {
          "choice": "nuget",
          "description": "NuGet package CI."
        },
        {
          "choice": "docker",
          "description": "Docker image CI."
        }
      ]
    }
  },
  "sources": [
    {
      // the other options are default
      "condition": "Update == false",
      "modifiers": [
        {
          "condition": "GitHubActionsWorkflow == 'none'",
          "exclude": [ ".github/**/*" ]
        }
      ]
    },
    {
      "condition": "Update == true",
      "include": [
        "**/Directory.Build.props"
      ],
      "modifiers": [
        {
          "condition": "UpdateSolutionProps == true",
          "include": [ "Directory.Solution.props" ]
        },
        {
          "condition": "UpdatePackagesProps == true",
          "include": [ "Directory.Packages.props" ]
        },
        {
          "condition": "UpdateEditorconfig == true",
          "include": [ ".editorconfig" ]
        },
        {
          "condition": "UpdateGitignore == true",
          "include": [ ".gitignore" ]
        },
        {
          "condition": "UpdateGlobalJson == true",
          "include": [ "global.json" ]
        },
        {
          "condition": "UpdateNugetConfig == true",
          "include": [ "nuget.config" ]
        },
        {
          "condition": "UpdateGitHubWorkflows == true",
          "include": [ ".github/**/*" ]
        }
      ]
    }
  ]
}
