{
  "$schema": "http://json.schemastore.org/template",
  "author": "fkthat",
  "classifications": [ "FkThat" ],
  "identity": "FkThat.Templates.Solution",
  "name": "FkThat solution",
  "shortName": "ft-sln",
  "tags": { "language": "C#", "type": "project" },
  "sourceName": "FkThat.Templates.Solution",
  "symbols": {
    "Update": {
      "description": "Updates the solution template (overwrites only `Directory.Build.props` files).",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateEditorconfig": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.editorconfig`.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGitignore": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.gitignore` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdatePackagesProps": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `Directory.Packages.props` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateSolutionProps": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `Directory.Solution.props` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGlobalJson": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `global.json` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateNugetConfig": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `nuget.config` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    },
    "UpdateGithubWorkflows": {
      "isEnabled": "Update == true",
      "description": "Overwrites the `.github/workflows/**/*` file.",
      "type": "parameter",
      "isRequired": false,
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      // the other options are default
      "condition": "Update == false"
    },
    {
      "condition": "Update == true",
      "include": [
        "**/Directory.Build.props"
      ],
      "modifiers": [
        {
          "condition": "UpdateEditorconfig == true",
          "include": [ ".editorconfig" ]
        },
        {
          "condition": "UpdateGitignore == true",
          "include": [ ".gitignore" ]
        },
        {
          "condition": "UpdatePackagesProps == true",
          "include": [ "Directory.Packages.props" ]
        },
        {
          "condition": "UpdateSolutionProps == true",
          "include": [ "Directory.Solution.props" ]
        },
        {
          "condition": "UpdateGlobalJson == true",
          "include": [ "global.json" ]
        },
        {
          "condition": "UpdateNugetConfig == true",
          "include": [ "nuget.config" ]
        },
        {
          "condition": "UpdateGithubWorkflows == true",
          "include": [ ".github/workflows/**/*" ]
        }
      ]
    }
  ]
}
