<Project>
  <PropertyGroup>
    <!-- Version -->
    <VersionPrefix>0.0.1</VersionPrefix>
    <!-- Build -->
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Assembly -->
    <Product>Templates</Product>
    <AssemblyVersion>$(VersionPrefix)</AssemblyVersion>
    <FileVersion>$(VersionPrefix)</FileVersion>
    <InformationalVersion>$(VersionPrefix)</InformationalVersion>
    <Company>FkThat</Company>
    <Copyright>Â© FkThat, 2022</Copyright>
    <Description>Custom .NET CLI templates.</Description>
    <!-- Package -->
    <IsPackable>false</IsPackable>
    <PackRelease>true</PackRelease>
    <Authors>FkThat</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/fkthat/Templates</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/fkthat/Templates</PackageProjectUrl>
    <PackageReleaseNotes>@(ReleaseNotes, '%0a')</PackageReleaseNotes>
    <PackageTags>cli;templates</PackageTags>
  </PropertyGroup>
  <!-- Read RELEASE-NOTES -->
  <Target Name="PreparePackageReleaseNotesFromFile" BeforeTargets="GenerateNuspec"
    Condition="Exists('$(MSBuildThisFileDirectory)RELEASE-NOTES')">
    <ReadLinesFromFile File="$(MSBuildThisFileDirectory)RELEASE-NOTES" >
      <Output TaskParameter="Lines" ItemName="ReleaseNotes"/>
    </ReadLinesFromFile>
  </Target>
</Project>
